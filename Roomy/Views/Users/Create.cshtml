@model User
@{
    ViewData["Title"] = Resource.create_contact_new_user;
}

<h2>@Resource.create_contact_new_user</h2>

<form asp-action="create" asp-controller="users" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <label asp-for="Mail" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Mail" class="form-control" placeholder="Adresse email">
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Enegistrer</button>
        </div>
    </div>
</form>

